{
  "name": "Python 3.13 Streamlit",
  "build": {
    "dockerfile": "docker/Dockerfile",
    "context": ".."
  },
  "forwardPorts": [
    8501
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      }
    }
  }
}